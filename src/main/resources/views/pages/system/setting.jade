// END PAGE HEADER
.row
    .col-md-12
        .portlet.light.bordered
            .portlet-title
                .caption.font-red-sunglo
                    i.icon-settings.font-dark-sunglo
                    span.caption-subject.font-dark.sbold.uppercase  系统参数配置
                //.actions
                    .btn-group
                        a.btn.btn-sm.green.dropdown-toggle(href='javascript:;', data-toggle='dropdown')
                            | 处理
                            i.fa.fa-angle-down
                        ul.dropdown-menu.pull-right
                            li
                                a(href='javascript:;')
                                    i.fa.fa-pencil
                                    |  编辑
                            li
                                a(href='javascript:;')
                                    i.fa.fa-trash-o
                                    |  删除
                            li
                                a(href='javascript:;')
                                    i.fa.fa-ban
                                    |  禁用
                            li.divider
                            li
                                a(href='javascript:;')  Make admin
            .portlet-body
                .tabbable-custom
                    ul.nav.nav-tabs
                        li.active
                            a(href='javascript:void(0);', data-target="#tab_base", data-toggle='tab')  基本设置
                        li
                            a(href='javascript:void(0);', data-target="#tab_security", data-toggle='tab')  安全设置
                        li
                            a(href='javascript:void(0);', data-target="#tab_SMTP", data-toggle='tab')  邮件设置
                        li
                            a(href='javascript:void(0);', data-target="#tab_weixin", data-toggle='tab')  微信参数设置
                        li
                            a(href='javascript:void(0);', data-target="#tab_SMS", data-toggle='tab')  短信平台设置
                        li
                            a(href='javascript:void(0);', data-target="#tab_database", data-toggle='tab')  数据库设置
                        li
                            a(href='javascript:void(0);', data-target="#tab_server", data-toggle='tab')  服务器设置
                        li
                            a(href='javascript:void(0);', data-target="#tab_other", data-toggle='tab')  其他设置
                    .tab-content
                        #tab_base.tab-pane.active
                            .form
                                .form-horizontal(role='form')
                                    .form-body
                                        .form-group
                                            label.col-md-2.control-label 名称:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='名称' ng-model="companyInfo.name")
                                                //span.help-block  数据库地址.
                                        .form-group
                                            label.col-md-2.control-label 地址:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='地址' ng-model="companyInfo.addr")
                                                //span.help-block  数据库地址.
                                        .form-group
                                            label.col-md-2.control-label 规模:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='公司规模' ng-model="companyInfo.employees")
                                        .form-group
                                            label.col-md-2.control-label 主营业务:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='主营业务' ng-model="companyInfo.main_business")
                                        .form-group
                                            label.col-md-2.control-label 座机:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='座机' ng-model="companyInfo.tel")
                                        .form-group
                                            label.col-md-2.control-label 电话号码:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='电话号码' ng-model="companyInfo.mobile_number")
                                        .form-group
                                            label.col-md-2.control-label 法人:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='法人' ng-model="companyInfo.legal_person")
                                        .form-group
                                            label.col-md-2.control-label 年限:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='年限' ng-model="companyInfo.create_date")
                                        .form-group
                                            label.col-md-2.control-label 备注:
                                            .col-md-6
                                                textarea.form-control(rows="5" placeholder='备注' ng-model="companyInfo.description")
                                    .form-actions
                                        button.btn.blue(type='button' ng-click="config.company.update();") 确定
                                        button.btn.default(type='button') 取消
                        #tab_security.tab-pane
                            .form
                                .form-horizontal(role='form')
                                    .form-body
                                        .form-group
                                            label.col-md-2.control-label IP白名单列表:
                                            .col-md-8
                                                textarea.form-control(rows="5" placeholder='IP白名单列表' ng-model="securityInfo.white_list")
                                                //span.help-block  数据库地址.
                                        .form-group
                                            label.col-md-2.control-label IP黑名单列表:
                                            .col-md-8
                                                textarea.form-control(rows="5" placeholder='IP黑名单列表' ng-model="securityInfo.forbid_list")
                                        .form-group
                                            label.col-md-2.control-label 后台登陆失败最大次数:
                                            .col-md-2
                                                input.form-control(type='text', placeholder='后台登陆失败最大次数' ng-model="securityInfo.max_conn")
                                    .form-actions
                                        button.btn.blue(type='button' ng-click="config.security.update();") 确定
                                        button.btn.default(type='button') 取消
                        #tab_SMTP.tab-pane
                            .form
                                .form-horizontal(role='form')
                                    .form-body
                                        .form-group
                                            label.col-md-2.control-label 邮件发送模式:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='邮件发送模式' ng-model="emailInfo.model")
                                                //span.help-block  数据库地址.
                                        .form-group
                                            label.col-md-2.control-label SMTP服务器:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='SMTP服务器' ng-model="emailInfo.smtp_server")
                                                //span.help-block  数据库地址.
                                        .form-group
                                            label.col-md-2.control-label 端口:
                                            .col-md-2
                                                input.form-control(type='text', placeholder='端口' ng-model="emailInfo.port")
                                        .form-group
                                            label.col-md-2.control-label 邮箱账号:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='邮箱账号' ng-model="emailInfo.account")
                                        .form-group
                                            label.col-md-2.control-label 邮箱密码:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='邮箱密码' ng-model="emailInfo.password")
                                        .form-group
                                            label.col-md-2.control-label 收件邮箱地址:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='收件邮箱地址' ng-model="emailInfo.receive_addr")
                                    .form-actions
                                        button.btn.blue(type='submit') 确定
                                        button.btn.default(type='button') 取消
                        #tab_weixin.tab-pane
                            .form
                                .form-horizontal(role='form')
                                    .form-body
                                        .form-group
                                            label.col-md-2.control-label appID:
