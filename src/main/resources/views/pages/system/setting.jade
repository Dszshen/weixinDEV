                                        .form-group
                                            label.col-md-2.control-label appsecret:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='appsecret')
                                                //span.help-block  数据库地址.
                                        .form-group
                                            label.col-md-2.control-label URL:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='URL')
                                        .form-group
                                            label.col-md-2.control-label Token:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='Token')
                                    .form-actions
                                        button.btn.blue(type='submit') 确定
                                        button.btn.default(type='button') 取消
                        #tab_SMS.tab-pane
                            .form
                                .form-horizontal(role='form')
                                    .form-body
                                        .form-group
                                            label.col-md-2.control-label 短信模板:
                                            .col-md-6
                                                input.form-control(type='text', placeholder='短信模板')
